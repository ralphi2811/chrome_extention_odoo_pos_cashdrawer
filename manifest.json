{
  "manifest_version": 3,
  "name": "Odoo POS Cash Drawer Opener",
  "version": "1.0",
  "description": "Ajoute un bouton pour ouvrir le tiroir caisse sur l'interface POS d'Odoo 17",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:22548/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
